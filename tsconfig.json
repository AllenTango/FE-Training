{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "target": "es2015",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "sourceMap": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}